
<div class="container mb-5 mt-5 text-center">
  <div class="text-center mb-5 header">
    <h1>Alcoholics Central</h1>
    <h4>Where every alcholic finds their poison</h4>
  </div>

      <div class="row text-center">
        <% @cocktails.each do |cocktail| %>
          <div class="col-sm-4">

            <% if cocktail.photo_url %>
              <div class="card mb-3" style="width: 18rem; background-image: linear-gradient(-225deg, rgba(30,30,30,0.6) 30%, rgba(46,46,46,0.5) 80%), url(<%= cl_image_path cocktail.photo %>); background-size: cover; background-repeat: no-repeat;     background-position: center; ">
                <div class="card-body">
                  <h5 class="card-title"><%= cocktail.name %></h5>
                  <%= link_to "Make a #{cocktail.name}", cocktail_path(cocktail.id), class: "btn btn-dark" %>
                </div>

              <% else %>
                <div class="card mb-3" style="width: 18rem; background-image: linear-gradient(-225deg, rgba(30,30,30,0.6) 30%, rgba(46,46,46,0.5) 80%), url(<%= cl_image_path "https://unsplash.com/search/photos/mojito" %>); background-size: cover; background-repeat: no-repeat;     background-position: center; ">
                <div class="card-body">
                  <h5 class="card-title"><%= cocktail.name %></h5>
                  <%= link_to "Make a #{cocktail.name}", cocktail_path(cocktail.id), class: "btn btn-dark" %>
                </div>
              <% end %>


            </div>

          </div>
        <% end %>
        </div>

  <div class="text-center">
    <%= link_to "Add a Cocktail", new_cocktail_path, class: "btn btn-dark btn-block mt-3" %>
  </div>
</div>
