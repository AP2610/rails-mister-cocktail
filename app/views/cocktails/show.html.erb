<h1><%= @cocktail.name  %></h1>
<h4>Ingredients</h4>
<ol>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.ingredient.name%> <%=dose.description %> <%= link_to "Delete", cocktail_dose_path(@cocktail.id, dose.id), method: :delete,
      data: { confirm: "Are you sure?" } %></li>
  <% end %>
</ol>



<p><%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail) %></p>
<p><%= link_to "Home", cocktails_path %></p>
